<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/createToast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Create Toast"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Bottom navigation"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createToast"/>

            <Button
                android:id="@+id/registrationDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Registration in DB"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottomNavigation"/>

            <Button
                android:id="@+id/readRealTimeDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Read from real time DB"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registrationDB"/>

            <Button
                android:id="@+id/writeRealTimeDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Write into real time DB"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/readRealTimeDB"/>

            <Button
                android:id="@+id/clicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Clicker"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/writeRealTimeDB"/>

            <Button
                android:id="@+id/workWithTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Work with files"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clicker"/>

            <Button
                android:id="@+id/recordMicrophone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Recording audio"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workWithTxt"/>

            <Button
                android:id="@+id/webSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Read from website"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recordMicrophone"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/webSite"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>